% exiting out of multiple loops
{
  while true do
  {
    while true do
    {
      while true do
      {
        var i : Integer
        i := 15
        write i, newline
        while true do
        {
          exit 2 when i = 8
          i := i - 1
        }
        write "This shouldn't be written"
      }

      exit 2
    }
  }
  write "out"
}
